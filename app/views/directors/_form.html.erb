<%= form_with model: @director do | f | %> 
  <%= f.label 'Director name' %>
  <%= f.text_field :name %>

  <%= f.label 'Nationality' %>
  <%= f.text_field :nationality %>

  <%= f.label 'Date of birth' %>
  <%= f.date_field :dob %>

  <%= f.label 'Favourite genre' %>
  <%= f.collection_select :genre_id, Genre.all, :id, :name %>

  <%= f.submit 'Edit' %>
<% end %>