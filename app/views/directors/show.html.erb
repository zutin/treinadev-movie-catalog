<h1>director info</h1>

<%= link_to 'Edit', edit_director_path %>

<p> <%= @director.name %> </p>
<p> <%= @director.nationality %> </p>
<p> <%= @director.dob %> </p>
<p> <%= @director.genre.name %> </p>

<h3>movies directed by</h3>
<ul>
  <% @director.movies.each do | movie | %>
    <li> <%= link_to movie.title, movie_path(movie.id) %> </li>
  <% end %>
</ul>