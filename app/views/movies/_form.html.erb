<%= form_with model: @movie do | f | %> 
  <%= f.label 'Movie title' %>
  <%= f.text_field :title %>

  <%= f.label 'Release date' %>
  <%= f.date_field :release_date %>

  <%= f.label 'Synopsis' %>
  <%= f.text_area :synopsis %>

  <%= f.label 'Country of origin' %>
  <%= f.text_field :country %>

  <%= f.label 'Length (in minutes)' %>
  <%= f.number_field :length %>

  <%= f.label 'Director' %>
  <%= f.collection_select :director_id, Director.all, :id, :name %>

  <%= f.label 'Genre' %>
  <%= f.collection_select :genre_id, Genre.all, :id, :name %>

  <%= f.submit 'Edit' %>
<% end %>